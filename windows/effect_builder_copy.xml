<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="effect_builder">
        <!-- <softclose /> -->
        <frame>recordsheet</frame>
        <placement>
            <size width="520" height="370" />
        </placement>
        <sizelimits>
            <minimum width="480" height="100" />
            <dynamic />
        </sizelimits>
        <nodelete />
        <playercontrol />
        <script file="windows/scripts/effect_builder.lua" />
        <sheetdata>
            <windowtitlebar name="title">
                <resource>effect_builder_title</resource>
            </windowtitlebar>

            <frame_effects name="headerframe">
                <anchored height="85" merge="replace">
                    <top parent="title" anchor="bottom" offset="15" />
                    <left offset="35" />
                    <right offset="-35" />
                </anchored>
            </frame_effects>

            <subwindow name="header">
                <anchored to="headerframe" position="over" />
                <class>effect_builder_header</class>
                <activate />
                <fastinit />
            </subwindow>

            <frame_effects name="bodyframe">
                <anchored merge="replace">
                    <top parent="header" anchor="bottom" offset="35" />
                    <left offset="35" />
                    <right offset="-35" />
                    <bottom offset="-32" />
                </anchored>
            </frame_effects>

            <!-- Effects List -->
            <header_column name="header_effects">
                <anchored to="bodyframe" position="insidetop" height="20" merge="replace"/>
                <static textres="header_effects_list" />
                <center />
            </header_column>
            <button_iedit name="effects_list_iedit">
                <anchored to="header_effects" position="insideright" offset="-5,0" />
                <target>effects_list</target>
            </button_iedit>
            <button_iadd name="effects_list_iadd">
                <anchored to="effects_list_iedit" position="insideright" offset="25,0" />
                <target>effects_list</target>
            </button_iadd>
            <list_effect name="effects_list">
                <anchored  to="bodyframe">
                    <top offset="30" />
					<left offset="0" />
					<right offset="0" />
					<bottom offset="0" />
                </anchored>
            </list_effect>
            <scrollbar>
                <target>effects_list</target>
                <anchored to="effects_list" />
            </scrollbar>
            <!-- /Effects List -->

            <resize_recordsheet />
            <close_recordsheet />
        </sheetdata>
    </windowclass>

    <windowclass name="effect_builder_header">
        <script file="windows/scripts/effect_builder.lua" />
        <sheetdata>
            <anchor_column name="columnanchor" />

            <!-- Effect Name -->
            <label_column name="name_label">
                <static textres="effect_name_label" />
            </label_column>
            <string_column_full name="effect_name">
                <anchored>
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="97" />
                    <right offset="-5" />
                </anchored>
                <sourceless />
                <script>
                    function onValueChanged()
                        window.updateEffectString()
                    end
                </script>
            </string_column_full>
            <!-- Effect Name -->

            <!-- Output -->
            <header_column name="output_label">
                <static textres="output_effect_label" />
                <center />
            </header_column>
            <string_column_output_effect name="output_effect"></string_column_output_effect>
            <!-- /Output -->
        </sheetdata>
    </windowclass>
</root>