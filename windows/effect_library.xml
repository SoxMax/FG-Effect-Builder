<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="effect_library">
        <!-- <softclose /> -->
        <frame>referencelist</frame>
        <placement>
            <size width="520" height="370" />
        </placement>
        <sizelimits>
            <minimum width="480" height="370" />
            <dynamic />
        </sizelimits>
        <playercontrol />
        <sheetdata>
            <windowtitlebar name="title">
                <!-- <resource>effect_builder_title</resource> -->
                <static>Effects Library</static>
            </windowtitlebar>

            <genericcontrol name="contentanchor">
                <anchored height="0">
                    <top parent="title" anchor="bottom" offset="3" />
                    <left parent="" anchor="left" offset="35" />
                    <right parent="" anchor="right" offset="-40" />
                </anchored>
                <disabled />
            </genericcontrol>

            <genericcontrol name="bottomanchor">
                <anchored height="0">
                    <bottom offset="-20" />
                    <left parent="" anchor="left" offset="35" />
                    <right parent="" anchor="right" offset="-40" />
                </anchored>
                <disabled />
            </genericcontrol>

            <!-- Effects List -->
            <windowlist name="list">
                <anchored to="contentanchor">
                    <top anchor="bottom" relation="relative" offset="20" />
                    <left />
                    <right />
                    <bottom parent="bottomanchor" anchor="top" relation="relative" offset="-70" />
                </anchored>
                <frame name="groupbox" offset="15,15,20,15" />
                <child></child>
                <child><backcolor>1A40301E</backcolor></child>
                <readonly />
                <sourceless />
                <class>effect_library_item</class>
                <!-- <sortby>
                    <control desc="true">effect_priority</control>
                </sortby> -->
                <script file="windows/scripts/effect_library_list.lua" />
            </windowlist>
            <scrollbar_list />
            <!-- /Effects List -->

            <genericcontrol name="listbottomanchor">
				<anchored to="list" height="0">
					<left />
					<right />
					<top anchor="bottom" relation="relative" offset="15" />
				</anchored>
			</genericcontrol>

            <genericcontrol name="rightanchor">
				<anchored to="listbottomanchor" height="20" width="0">
					<right offset="10" />
					<top anchor="bottom" relation="relative" offset="5" />
				</anchored>
			</genericcontrol>

            <filter name="filter_name">
                <anchored to="rightanchor" height="20">
                    <left parent="list" offset="20" />
                    <top />
                    <right anchor="left" relation="relative" offset="-10" />
                </anchored>
                <script>
                    function onValueChanged()
                        super.onValueChanged();
                        window.onNameFilterChanged();
                    end
                </script>
            </filter>

            <resize_referencelist />
			<close_referencelist />
        </sheetdata>
    </windowclass>

    <windowclass name="effect_library_item">
		<margins control="0,0,0,2" />
		<!-- <script file="campaign/scripts/masterindexitem_window.lua" /> -->
		<sheetdata>
            <leftanchor_eb />
            <label name="effect_name">
                <anchored height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                </anchored>
            </label>


			<!-- <masterindexitem_link name="link" />

			<masterindexitem_anchor_right name="rightanchor" />
			<masterindexitem_idelete name="idelete" />
			<masterindexitem_access name="access" />
			<masterindexitem_modified name="modified" />
			<masterindexitem_category name="category" />
			
			<masterindexitem_name name="name" /> -->
		</sheetdata>
	</windowclass>
</root>
