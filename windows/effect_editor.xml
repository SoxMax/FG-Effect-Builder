<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="effect_editor">
        <!-- <frame name="border" /> -->
        <script file="windows/scripts/effect_editor.lua" />
        <margin control="0,0,0,2" />
        <sizelimits>
            <minimum height="25" />
        </sizelimits>
        <sheetdata>
            <genericcontrol name="leftanchor">
                <anchored width="0" height="0">
                    <top />
                    <left />
                </anchored>
                <invisible />
                <disabled />
            </genericcontrol>
            <genericcontrol name="rightanchor">
                <anchored width="0" height="0">
                    <top />
                    <right />
                </anchored>
                <invisible />
                <disabled />
            </genericcontrol>

            <priority_number name="effect_priority">
                <anchored width="15" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="5" />
                </anchored>
            </priority_number>

            <cycler_active_effect_type name="effect_type">
                <anchored width="100" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                </anchored>
            </cycler_active_effect_type>

            <!-- delete button if in edit mode -->
            <button_idelete name="idelete">
                <anchored width="20" height="20">
                    <top parent="rightanchor" anchor="top" />
                    <right parent="rightanchor" anchor="left" relation="relative" />
                </anchored>
            </button_idelete>

            <!-- Effect Specific editor -->
            <subwindow name="effect_type_editor">
                <!-- <frame name="border" /> -->
                <anchored>
                    <top />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                    <right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
                </anchored>
                <activate />
                <fastinit />
                <script>
                    function onInit()
                        window.updateEffectType()
                    end
                </script>
            </subwindow>

            <!-- Effect String holder -->
            <hs name="effect_description">
                <script>
                    function onValueChanged()
                        window.windowlist.window.updateEffectString()
                    end
                </script>
            </hs>
        </sheetdata>
    </windowclass>
</root>