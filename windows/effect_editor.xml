<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="effect_editor">
        <frame name="border" />
        <margins control="0,2,0,2" />
        <script file="windows/scripts/effect_editor.lua" />
        <sheetdata>
            <genericcontrol name="rightanchor">
                <anchored width="0" height="0">
                    <top offset="2" />
                    <right />
                </anchored>
                <invisible />
            </genericcontrol>
            <genericcontrol name="leftanchor">
                <anchored width="0" height="0">
                    <top offset="2" />
                    <left />
                </anchored>
                <invisible />
            </genericcontrol>

            <cycler_active_effect_type name="effect_type" >
                <anchored width="100">
                    <top parent="leftanchor" anchor="bottom" relation="relative" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10"/>
                </anchored>
            </cycler_active_effect_type>

            <!-- delete button if in edit mode -->
            <button_idelete name="idelete">
                <anchored width="20" height="20">
                    <top parent="rightanchor" anchor="top"/>
                    <right parent="rightanchor" anchor="left" relation="relative"/>
                </anchored>
            </button_idelete>

            <basicstring name="effect_description">
                <frame name="border" />
                <anchored width="100">
                    <top />
                    <right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
                </anchored>
                <multilinespacing>20</multilinespacing>
                <readonly />
                <script>
                    function onValueChanged()
                        window.windowlist.window.updateEffectString()
                    end
                </script>
                <default>description</default>
            </basicstring>

            <subwindow name="effect_type_editor">
                <frame name="border" />
                <anchored  merge="replace">
                    <top />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10"/>
                    <right parent="effect_description" anchor="left" relation="relative" offset="-5" />
                </anchored>
                <activate />
                <fastinit />
                <script>
                    function onInit()
                        window.updateEffectType()
                    end
                </script>
            </subwindow>
        </sheetdata>
    </windowclass>
</root>
