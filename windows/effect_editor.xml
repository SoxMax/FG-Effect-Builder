<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="effect_editor">
        <!-- <frame name="border" /> -->
        <script file="windows/scripts/effect_editor.lua" />
        <margins control="0,0,0,2" />
        <sheetdata>
            <leftanchor_eb />
            <rightanchor_eb />

            <effect_priority_eb name="effect_priority">
                <anchored>
                    <left offset="5" />
                </anchored>
            </effect_priority_eb>
            
            <!-- <combobox_eb_effect_category name="effect_category" />
            
            <combobox_eb_effect name="effect">
                <anchored width="200" />
            </combobox_eb_effect> -->

            <label name="effect">
                <anchored height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                </anchored>
                <!-- <font>utility_label</font> -->
                <script file="common/scripts/label_eb_effect.lua" />
            </label>

            <!-- delete button if in edit mode -->
            <button_idelete_eb name="idelete">
                <anchored width="20" height="20">
                    <top offset="2" />
                    <right parent="rightanchor" anchor="left" relation="relative" offset="-2" />
                </anchored>
            </button_idelete_eb>

            <!-- Effect Type Specific editor -->
            <subwindow_eb_effect_editor>
                <!-- <frame name="border" /> -->
                <anchored>
                    <right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
                </anchored>
            </subwindow_eb_effect_editor>

            <!-- Effect String holder -->
            <hsc name="effect_description">
                <script>
                    function onValueChanged()
                        window.windowlist.window.updateEffectString()
                    end
                </script>
            </hsc>
        </sheetdata>
    </windowclass>
</root>