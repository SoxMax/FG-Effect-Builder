<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="susceptiblity_editor">
        <script file="editors/35E-PFRPG/scripts/susceptiblity_editor.lua" />
        <margin control="0,0,0,2" />
        <sizelimits>
            <minimum height="25" />
        </sizelimits>
        <sheetdata>
            <genericcontrol name="leftanchor">
                <anchored width="0" height="0">
                    <top />
                    <left />
                </anchored>
                <invisible />
            </genericcontrol>

            <stringcycler_effects name="susceptiblity_type">
                <anchored width="140" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="5" />
                </anchored>
                <parameters>
                    <defaultlabelres mergerule="replace">immune</defaultlabelres>
                    <defaultvalue>IMMUNE</defaultvalue>
                    <labelsres>resist|dr|vuln</labelsres>
                    <values>RESIST|DR|VULN</values>
                </parameters>
                <script>
                    function onValueChanged()
                        window.updateVisibility()
                        super.onValueChanged()
                    end
                </script>
            </stringcycler_effects>

            <effect_number name="susceptiblity_modifier">
                <anchored width="20" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                </anchored>
            </effect_number>

            <combobox_damage_types name="susceptiblity">
                <anchored width="100" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                </anchored>
            </combobox_damage_types>
        </sheetdata>
    </windowclass>
</root>
