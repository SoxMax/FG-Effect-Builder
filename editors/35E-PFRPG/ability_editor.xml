<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="ability_editor">
        <script file="editors/35E-PFRPG/scripts/ability_editor.lua" />
        <sheetdata>
            <anchor_column name="columnanchor" />

            <effects_stringcycler name="ability">
                <anchored width="100"> 
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="5" />
                </anchored>
                <parameters>
                    <defaultlabelres mergerule="replace">strength</defaultlabelres>
                    <defaultvalue>STR</defaultvalue>
                    <labelsres>dexterity|constitution|intelligence|wisdom|charisma</labelsres>
                    <values>DEX|CON|INT|WIS|CHA</values>
                </parameters>
            </effects_stringcycler>

            <effect_number name="ability_modifier">
                <anchored to="ability" position="righthigh" offset="10,0" width="20" height="20"/>
            </effect_number>

            <combobox_bonus_types name="ability_bonus_type">
                <anchored to="ability_modifier" position="righthigh" offset="10,0" width="100" height="20"/>
            </combobox_bonus_types>
        </sheetdata>
    </windowclass>
</root>
