<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="ability_editor">
        <script file="editors/35E-PFRPG/scripts/ability_editor.lua" />
        <margin control="0,0,0,2" />
        <sizelimits>
            <minimum height="25" />
        </sizelimits>
        <sheetdata>
            <genericcontrol name="leftanchor">
                <anchored width="0" height="0">
                    <top />
                    <left />
                </anchored>
                <invisible />
            </genericcontrol>

            <stringcycler_effects name="ability">
                <anchored width="100" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="5" />
                </anchored>
                <parameters>
                    <defaultlabelres mergerule="replace">strength</defaultlabelres>
                    <defaultvalue>STR</defaultvalue>
                    <labelsres>dexterity|constitution|intelligence|wisdom|charisma</labelsres>
                    <values>DEX|CON|INT|WIS|CHA</values>
                </parameters>
            </stringcycler_effects>

            <effect_number name="ability_modifier">
                <anchored width="20" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                </anchored>
            </effect_number>

            <combobox_bonus_types name="ability_bonus_type">
                <anchored width="100" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                </anchored>
            </combobox_bonus_types>
        </sheetdata>
    </windowclass>
</root>
