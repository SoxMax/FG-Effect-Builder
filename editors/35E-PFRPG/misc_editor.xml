<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="misc_editor">
        <script file="editors/35E-PFRPG/scripts/misc_editor.lua" />
        <margin control="0,0,0,2" />
        <sizelimits>
            <minimum height="25" />
        </sizelimits>
        <sheetdata>
            <genericcontrol name="leftanchor">
                <anchored width="0" height="0">
                    <top />
                    <left />
                </anchored>
                <invisible />
            </genericcontrol>

            <stringcycler_effects name="misc">
                <anchored width="100" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="5" />
                </anchored>
                <parameters>
                    <defaultlabelres mergerule="replace">ac</defaultlabelres>
                    <defaultvalue>AC</defaultvalue>
                    <labelsres>atk|dmg|heal|init_eb</labelsres>
                    <values>ATK|DMG|HEAL|INIT</values>
                </parameters>
            </stringcycler_effects>

            <effect_number name="misc_modifier">
                <anchored width="20" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                </anchored>
            </effect_number>

            <combobox_bonus_types name="misc_bonus_type">
                <anchored width="100" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                </anchored>
            </combobox_bonus_types>
        </sheetdata>
    </windowclass>
</root>
