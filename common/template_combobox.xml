<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <template name="combobox_retrievable_value">
        <simplestring>
			<frame>
				<name>fieldlight</name>
				<offset>7,5,7,5</offset>
			</frame>
			<readonly />
			<listdirection mergerule="replace">up</listdirection>
			<buttonoffset mergerule="replace">0,1</buttonoffset>
			<!-- Possible parameters
			<listoffset mergerule="replace">0,5</listoffset>
			<listfonts>
				<normal mergerule="replace">chatfont</normal>
				<selected mergerule="replace">narratorfont</selected>
			</listfonts>
			<listframes>
				<normal mergerule="replace"></normal>
				<selected mergerule="replace">rowshade</selected>
			</listframes>
			<listmaxsize mergerule="replace">0</listmaxsize>
			-->
			<script file="common/scripts/combobox_retrievable_value.lua"/>
		</simplestring>
    </template>

    <template name="combobox_effects">
        <combobox_retrievable_value>
            <anchored width="100" height="20">
                <top offset="3" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <sourceless />
            <listdirection>down</listdirection>
            <listmaxsize>5</listmaxsize>
            <script file="common/scripts/control_valueholder.lua" />
        </combobox_retrievable_value>
    </template>

    <template name="combobox_effect_category">
        <combobox_effects name="effect_category">
            <script file="common/scripts/combobox_effect_category.lua" />
        </combobox_effects>
    </template>

    <template name="combobox_effect">
        <combobox_effects name="effect">
            <script file="common/scripts/combobox_effect.lua" />
        </combobox_effects>
    </template>

    <template name="combobox_damage_types">
        <combobox_effects name="damage_type">
            <script>
                function onInit()
                    super.onInit()
                    add("")
                    addItems(DataCommon.dmgtypes)
                end
            </script>
        </combobox_effects>
    </template>

    <template name="combobox_bonus_types">
        <combobox_effects name="effect_bonus_type">
            <script>
                function onInit()
                    super.onInit()
                    add("")
                    addItems(DataCommon.bonustypes)
                end
            </script>
        </combobox_effects>
    </template>

    <template name="combobox_abilities">
        <combobox_effects name="ability">
            <script>
                function onInit()
                    super.onInit()
                    add("")
                    addItems(DataCommon.abilities)
                end
            </script>
        </combobox_effects>
    </template>

    <template name="combobox_skills">
        <combobox_effects name="skill">
            <script>
                function onInit()
                    super.onInit()
                    add("")
                    for skill,_ in pairs(DataCommon.skilldata) do
                        add(skill:lower())
                    end
                end
            </script>
        </combobox_effects>
    </template>

    <template name="combobox_conditions">
        <combobox_effects name="condition">
            <script>
                function onInit()
                    super.onInit()
                    addItems(DataCommon.conditions)
                end
            </script>
        </combobox_effects>
    </template>

    <template name="combobox_alignments">
        <combobox_effects name="alignment">
            <script>
                function onInit()
                    super.onInit()
                    add("good", "Good")
                    add("evil", "Evil")

                    add("lawful", "Lawful")
                    add("chaotic", "Chaotic")

                    add("LG", "Lawful Good")
                    add("NG", "Neutral Good")
                    add("CG", "Chaotic Good")
                    
                    add("LN", "Lawful Neutral")
                    -- add("N", "Neutral") No True Neutral support
                    add("CN", "Chaotic Neutral")
                    
                    add("LE", "Lawful Evil")
                    add("NE", "Neutral Evil")
                    add("CE", "Chaotic Evil")
                end
            </script>
        </combobox_effects>
    </template>

    <template name="combobox_creature_types">
        <combobox_effects name="creature_type">
            <script>
                function onInit()
                    super.onInit()
                    addItems(DataCommon.creaturetype)
                    addItems(DataCommon.creaturesubtype)
                end
            </script>
        </combobox_effects>
    </template>

    
    <template name="combobox_sizes">
        <combobox_effects name="size">
            <script>
                function onInit()
                    super.onInit()
                    for sizeName,_ in pairs(DataCommon.creaturesize) do
                        if #sizeName > 1 then
                            add(sizeName)
                        end
                    end
                end
            </script>
        </combobox_effects>
    </template>
</root>