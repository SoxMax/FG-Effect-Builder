<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <template name="frame_effects">
        <genericcontrol name="contentframe">
            <anchored>
                <top parent="title" anchor="bottom" offset="15" />
                <left offset="35" />
                <right offset="-35" />
                <bottom offset="-32" />
            </anchored>
            <frame name="groupbox" offset="20,17,20,17" />
            <disabled />
        </genericcontrol>
    </template>

    <template name="string_column_output_effect">
        <string_column_full>
            <frame mergerule="replace" name="fielddark" offset="7,5,7,5" />
            <sourceless />
            <readonly />
            <nodrop />
            <script file="common/scripts/old/string_column_output_effect.lua" />
        </string_column_full>
    </template>

    <template name="list_effect">
		<windowlist>
			<child mergerule="resetandadd"></child>
			<child><backcolor>1A40301E</backcolor></child>
			<allowcreate />
			<allowdelete />
            <readonly />
            <sourceless />
            <class>effect_editor</class>
            <sortby>
                <control desc="true">effect_priority</control>
            </sortby>
			<script file="common/scripts/old/list_effect.lua" />
		</windowlist>
	</template>

    <template name="button_iadd_eb">
		<buttoncontrol>
			<anchored width="20" height="20" />
			<icon normal="button_add" pressed="button_add_down" />
			<tooltip textres="button_add" />
			<script>
				function onInit()
					if visible then
						return;
					end
					local node = window.getDatabaseNode();
					if node and node.isReadOnly() then
						setVisible(false);
					end
				end
				function onButtonPress()
					window[target[1]].addEntry(true);
				end
			</script>
		</buttoncontrol>
	</template>
	<template name="button_iedit_eb">
		<buttoncontrol>
			<anchored width="20" height="20" />
			<state icon="button_edit" tooltipres="button_editon" />
			<state icon="button_edit_down" tooltipres="button_editoff" />
			<script>
				function onInit()
					if visible then
						return;
					end
					local node = window.getDatabaseNode();
					if node and node.isReadOnly() then
						setVisible(false);
					end
				end
				function onValueChanged()
					if window.onEditModeChanged then
						window.onEditModeChanged(getValue() == 1);
					end
					window[target[1]].update();
				end
			</script>
		</buttoncontrol>
	</template>
	<template name="button_idelete_eb">
		<buttoncontrol>
			<anchored width="20" height="20" />
			<state icon="button_delete" tooltipres="button_delete" />
			<state icon="button_deleteconfirm" tooltipres="button_deleteconfirm" />
			<tooltip textres="button_delete" />
			<allowdoubleclick />
			<invisible />
			<script>
				function setVisibility(bVisible)
					setValue(0);
					setVisible(bVisible);
				end
				
				function onButtonPress()
					if getValue() == 0 then
						if window.delete then
							window.delete();
						else
							window.getDatabaseNode().delete();
						end
					end
				end
			</script>
		</buttoncontrol>
	</template>
</root>
