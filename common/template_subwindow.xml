<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <template name="subwindow_effect_editor">
        <subwindow name="effect_editor">
            <anchored>
                <top />
                <left parent="leftanchor" anchor="right" relation="relative" offset="0" />
                <right />
            </anchored>
            <activate />
            <fastinit />
            <script file="common/scripts/subwindow_effect_editor.lua" />
        </subwindow>
    </template>

    <template name="subwindow_valueholder">
        <subwindow>
            <frame name="border" />
            <anchored width="120">
                <!-- <position>left</position> -->
                <top />
                <left parent="leftanchor" anchor="right" relation="relative" offset="0" />
                <!-- <right /> -->
            </anchored>
            <activate />
            <fastinit />
            <script file="common/scripts/subwindow_valueholder.lua" />
        </subwindow>
    </template>

    <template name="subwindow_dice_value_editor">
        <subwindow_valueholder name="dice_value">
            <class>subwindow_dice_value_editor</class>
        </subwindow_valueholder>
    </template>
    <windowclass name="subwindow_dice_value_editor">
        <script file="common/scripts/subwindow_dice_value_editor.lua" />
        <margins control="0,0,0,2" />
        <sheetdata>
            <leftanchor />
            
            <dice_effect name="effect_dice" />

			<label_plus />

            <effect_number name="effect_modifier">
                <anchored>
                    <left offset="5" />
                </anchored>
            </effect_number>
        </sheetdata>
    </windowclass>
</root>