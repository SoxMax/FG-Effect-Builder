<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <template name="leftanchor_eb">
        <genericcontrol name="leftanchor">
            <anchored width="0" height="0">
                <top />
                <left />
            </anchored>
            <invisible />
            <disabled />
        </genericcontrol>
    </template>
    <template name="rightanchor_eb">
        <genericcontrol name="rightanchor">
            <anchored width="0" height="0">
                <top />
                <right />
            </anchored>
            <invisible />
            <disabled />
        </genericcontrol>
    </template>


    <template name="spaceholder_eb">
        <genericcontrol>
            <!-- <frame name="border" /> -->
            <anchored width="0" height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <disabled />
        </genericcontrol>
    </template>

    <template name="number_eb_valueholder">
        <basicnumber>
            <anchored width="20" height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <default>0</default>
            <hideonvalue>0</hideonvalue>
            <sourceless />
            <script file="common/scripts/control_valueholder.lua" />
        </basicnumber>
    </template>

    <template name="effect_priority_eb">
        <basicnumber>
            <anchored width="15" height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <default>0</default>
            <sourceless />
            <script>
                function onValueChanged()
                    window.windowlist.applySort()
                end
            </script>
        </basicnumber>
    </template>

    <template name="dice_eb_valueholder">
        <basicdice>
            <anchored width="60" height="20">
                <top offset="3" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <sourceless />
            <script file="common/scripts/control_valueholder.lua" />
        </basicdice>
    </template>

    <template name="checkbox_eb_valueholder">
        <button_checkbox>
            <anchored width="20" height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="0" />
            </anchored>
            <sourceless />
            <script file="common/scripts/control_valueholder.lua" />
        </button_checkbox>
    </template>

    <template name="stringfield_eb_valueholder">
        <basicstring>
            <anchored width="150" height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <script file="common/scripts/control_valueholder.lua" />
            <script file="common/scripts/stringfield_eb_drop_handler.lua" />
        </basicstring>
    </template>

    <template name="label_eb">
        <label>
            <anchored height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
        </label>
    </template>

    <template name="label_eb_plus">
        <label_eb>
            <anchored>
                <left offset="5" />
            </anchored>
            <static>+</static>
        </label_eb>
    </template>
</root>